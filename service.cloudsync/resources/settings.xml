<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<settings>
  <category label="General">
    <setting id="enabled" type="bool" label="Enable CloudSync V2" default="true"/>
    <setting id="debug_logging" type="bool" label="Enable Debug Logging" default="false"/>
    <setting id="device_name" type="text" label="Device Name" default=""/>
  </category>

  <category label="MQTT Broker">
    <setting id="mqtt_broker_host" type="text" label="MQTT Broker Host" default=""/>
    <setting id="mqtt_broker_port" type="text" label="MQTT Broker Port" default="8883"/>
    <setting id="mqtt_username" type="text" label="MQTT Username" default=""/>
    <setting id="mqtt_password" type="text" label="MQTT Password" default="" option="hidden"/>
    <setting id="mqtt_use_ssl" type="bool" label="Use SSL/TLS" default="true"/>
    <setting id="mqtt_test_connection" type="action" label="Test MQTT Connection" action="RunScript(special://home/addons/service.cloudsync_v2/resources/lib/mqtt_test.py)"/>
  </category>

  <category label="Sync Options">
    <setting id="sync_watched" type="bool" label="Sync Watched Status" default="true"/>
    <setting id="sync_resume" type="bool" label="Sync Resume Points" default="true"/>
    <setting id="sync_favorites" type="bool" label="Sync Favorites" default="true"/>
    <setting id="sync_episodes" type="bool" label="Sync Episodes" default="true"/>
  </category>

  <category label="Advanced">
    <setting id="mqtt_device_id" type="text" label="Device ID" default="" option="hidden"/>
    <setting id="connection_timeout" type="slider" label="Connection Timeout (seconds)" default="60" range="10,5,300"/>
    <setting id="keepalive" type="slider" label="Keep Alive (seconds)" default="60" range="30,10,300"/>
  </category>
</settings>